<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.br.ufc.bluetooth_android_arduino.activitys.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="369dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnControleRemoto"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="15dp"
            android:text="@string/controle_remoto" />

        <Button
            android:id="@+id/btnControlePersonalizado"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="15dp"
            android:text="@string/controle_personalizado" />

        <Button
            android:id="@+id/buttonHabilitarVisibilidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/habilitar_visibilidade" />

        <Button
            android:id="@+id/buttonProcurarDispositivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/buscar_dispositivos" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
